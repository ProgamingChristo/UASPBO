<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" stylesheets="@../../../css/main-styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inventorydesktop.MainController">

    <StackPane fx:id="contentArea" styleClass="content-area" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Text fx:id="contentText" text="Welcome to the Dashboard!" />
    </StackPane>

    <VBox fx:id="sidebar" prefWidth="200" spacing="20.0" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0">
        <Button fx:id="homeButton" onAction="#loadHome" styleClass="button" text="Dashboard" />
        <Button fx:id="productButton" onAction="#loadProduct" styleClass="button" text="Product" />
        <Button fx:id="customerButton" onAction="#loadCustomer" styleClass="button" text="Customer" />
        <Button fx:id="pembelianButton" onAction="#loadPembelian" styleClass="button" text="Pembelian" />
        <Button fx:id="penjualanButton" onAction="#loadPenjualan" styleClass="button" text="Penjualan" />
        <Button fx:id="accountButton" onAction="#loadAccount" styleClass="button" text="Account" />

        <VBox fx:id="spacer" VBox.vgrow="always" />

        <VBox fx:id="bottomSection" spacing="10" styleClass="bottom-section">
            <Button fx:id="profileIconButton" onAction="#viewProfile" styleClass="icon-button" text="Profile">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="mdi-account" iconSize="14" />
                </graphic>
            </Button>

            <Button fx:id="notificationsIconButton" onAction="#viewNotifications" styleClass="icon-button" text="Notification">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="mdi-bell" iconSize="14" />
                </graphic>
            </Button>

            <Button fx:id="logoutIconButton" onAction="#logout" styleClass="icon-button" text="Logout">
                <graphic>
                    <FontIcon iconColor="WHITE" iconLiteral="mdi-logout" iconSize="14" />
                </graphic>
            </Button>
        </VBox>
    </VBox>
</AnchorPane>